    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'silt_lua'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=silt_lua"
                ],
                "filter": {
                    "name": "silt_lua",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'silt_lua_cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=silt_lua_cli",
                    "--package=silt_lua",
                    "--features=dev-out"
                ],
                "filter": {
                    "name": "silt_lua_cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'silt_lua_cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=silt_lua_cli",
                    "--package=silt_lua"
                ],
                "filter": {
                    "name": "silt_lua_cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}